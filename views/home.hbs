<!DOCTYPE html>
<html>
<head>
  <title>Game Tracker</title>
</head>
<body>
  {{#if user}}
    <h1>Welcome, {{user.name}}!</h1>
  {{else}}
    <h1>Welcome, Guest!</h1>
  {{/if}}

  {{#if success_msg}}
    <p style="color:green">{{success_msg}}</p>
  {{/if}}
  {{#if error_msg}}
    <p style="color:red">{{error_msg}}</p>
  {{/if}}

  <p><a href="/achievements">View Achievements</a></p>
  <p><a href="/users/login">Login</a> | <a href="/users/register">Register</a></p>
</body>
</html>
